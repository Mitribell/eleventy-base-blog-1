---
layout: layouts/base.njk
---

<section id="main-content" class="grid">
    <div class="writing-meta">
        <p>
            {%- for tag in tags | filterTagList %}
                {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
                <a href="{{ tagUrl }}">{{ tag }}</a>
                {%- if not loop.last %},
                {% endif %}
            {%- endfor %}
        </p>
        <p>{{ meta }}</p>
        <p><time datetime="{{ page.date | htmlDateString }}">{{ page.date | yearDate }}</time></p>
    </div><div class="writing">
        <h1>{{ title }}</h1>
        <div class = "mobile-meta"><p>{{ meta }}</p></div>
        {{ content | safe }}
        <footer class="post-footer">            
        </footer>
    </div>
</section>
{%- if collections.posts %}
    {%- set previousPost = collections.posts | getPreviousCollectionItem %}
    {%- set nextPost = collections.posts | getNextCollectionItem %}
    {%- if nextPost or previousPost %}
        <ul class="links-nextprev">
            {%- if previousPost %}
                <li class="links-nextprev-prev">← Previous<br>
                        <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
                    </li>
                {% endif %}
                {%- if nextPost %}
                    <li class="links-nextprev-next">Next →<br>
                            <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
                        </li>
                    {% endif %}
                </ul>
            {%- endif %}
        {%- endif %}